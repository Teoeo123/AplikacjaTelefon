<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PartyAcceptActivity">

    <Button
        android:id="@+id/btn_party_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cofnij"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_party_accept"
        android:layout_width="119dp"
        android:layout_height="25dp"
        android:text="Nazwa Imprezy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/party_accept_rec"
        android:layout_width="409dp"
        android:layout_height="662dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_party_accept"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_party_accept" />
</androidx.constraintlayout.widget.ConstraintLayout>