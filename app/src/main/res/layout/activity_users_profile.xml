<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/usrProfPic"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_marginTop="108dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/usrNumP"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"

        android:drawableStart="@drawable/ic_phone"
        android:drawableLeft="@drawable/ic_phone"
        android:drawablePadding="5dp"

        android:drawableTint="@color/ic_launcher_background"
        android:text="numer"

        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/usrPlecP"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/usrPlecP"
        app:layout_constraintTop_toBottomOf="@+id/usrPlecP" />

    <TextView
        android:id="@+id/usrMiastP"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_city"
        android:drawableLeft="@drawable/ic_city"
        android:drawablePadding="5dp"
        android:drawableTint="@color/ic_launcher_background"
        android:text="Miasto"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/usrImieP"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/usrImieP"
        app:layout_constraintTop_toBottomOf="@+id/usrImieP" />

    <TextView
        android:id="@+id/usrImieP"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:drawableStart="@drawable/ic_personname"
        android:drawableLeft="@drawable/ic_personname"
        android:drawablePadding="5dp"
        android:drawableTint="@color/ic_launcher_background"
        android:text="Imie"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/usrProfPic"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/usrProfPic"
        app:layout_constraintTop_toBottomOf="@+id/usrProfPic" />

    <TextView
        android:id="@+id/usrPlecP"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_mars"
        android:drawablePadding="5dp"
        android:drawableTint="@color/ic_launcher_background"
        android:text="płeć"

        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/usrMiastP"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/usrMiastP"
        app:layout_constraintTop_toBottomOf="@+id/usrMiastP" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:scaleX="2"
        android:scaleY="2"
        android:tint="@color/ic_launcher_background"
        app:layout_constraintBottom_toTopOf="@+id/usrImieP"
        app:layout_constraintEnd_toStartOf="@+id/usrProfPic"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.176"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />


</androidx.constraintlayout.widget.ConstraintLayout>