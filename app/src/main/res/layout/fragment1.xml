<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:background="@drawable/gradient_background"
    android:layout_height="match_parent">


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imgProfPic"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />


    <TextView
        android:id="@+id/txtNumP"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:layout_marginEnd="28dp"
        android:drawableStart="@drawable/ic_phone"
        android:drawableLeft="@drawable/ic_phone"
        android:drawableTint="@color/ic_launcher_background"
        android:text="numer"
        android:drawablePadding="5dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/txtPlecP"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtPlecP"
        app:layout_constraintTop_toBottomOf="@+id/txtPlecP" />

    <TextView
        android:id="@+id/txtMiastP"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:text="Miasto"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_city"
        android:drawableLeft="@drawable/ic_city"
        android:drawableTint="@color/ic_launcher_background"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/txtImieP"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtImieP"
        app:layout_constraintTop_toBottomOf="@+id/txtImieP" />

    <TextView
        android:id="@+id/txtPlecP"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:text="płeć"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_mars"
        android:drawableStart="@drawable/ic_mars"
        android:drawableTint="@color/ic_launcher_background"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/txtMiastP"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtMiastP"
        app:layout_constraintTop_toBottomOf="@+id/txtMiastP" />

    <TextView
        android:id="@+id/txtImieP"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="48dp"
        android:textColor="@color/white"
        android:drawableStart="@drawable/ic_personname"
        android:drawableLeft="@drawable/ic_personname"
        android:drawablePadding="5dp"
        android:drawableTint="@color/ic_launcher_background"
        android:text="Imie"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgProfPic" />

    <ImageView
        android:id="@+id/btnEditProfP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/txtImieP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.385"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgProfPic"
        app:layout_constraintVertical_bias="0.541"
        app:srcCompat="@drawable/ic_edit" />

    <ImageView
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"

        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.308"
        app:layout_constraintStart_toEndOf="@+id/btnEditProfP"
        app:layout_constraintTop_toBottomOf="@+id/imgProfPic"
        app:srcCompat="@drawable/ic_baseline_login_24" />


</androidx.constraintlayout.widget.ConstraintLayout>