<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilActivity">


    <ImageView
        android:id="@+id/usrProfPic"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNazwiP"
        android:layout_width="350dp"
        android:layout_height="46dp"
        android:text="Nazwisko"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/usrImieP"
        app:layout_constraintStart_toStartOf="@+id/usrImieP"
        app:layout_constraintTop_toBottomOf="@+id/usrImieP" />

    <TextView
        android:id="@+id/usrNumP"
        android:layout_width="350dp"
        android:layout_height="46dp"
        android:text="numer"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/txtNazwiP"
        app:layout_constraintStart_toStartOf="@+id/txtNazwiP"
        app:layout_constraintTop_toBottomOf="@+id/txtNazwiP" />

    <TextView
        android:id="@+id/usrMiastP"
        android:layout_width="350dp"
        android:layout_height="46dp"
        android:text="miasto"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/usrNumP"
        app:layout_constraintStart_toStartOf="@+id/usrNumP"
        app:layout_constraintTop_toBottomOf="@+id/usrNumP" />

    <TextView
        android:id="@+id/usrPlecP"
        android:layout_width="350dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:text="płeć"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/usrNumP"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/usrNumP"
        app:layout_constraintTop_toBottomOf="@+id/usrMiastP" />

    <TextView
        android:id="@+id/usrImieP"
        android:layout_width="350dp"
        android:layout_height="46dp"
        android:text="Imie"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usrProfPic" />

    <Button
        android:id="@+id/btnEditProfP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="Edytuj Profil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>