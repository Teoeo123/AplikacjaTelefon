<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilActivity">


    <ImageView
        android:id="@+id/imgProfPic"
        android:layout_width="300px"
        android:layout_height="300px"
        android:paddingVertical="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNazwiP"
        android:layout_width="350dp"
        android:layout_height="46dp"
        android:text="Nazwisko:"
        android:paddingRight="30dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/txtImieP"
        app:layout_constraintStart_toStartOf="@+id/txtImieP"
        app:layout_constraintTop_toBottomOf="@+id/txtImieP" />

    <TextView
        android:id="@+id/txtNumP"
        android:layout_width="350dp"
        android:layout_height="46dp"
        android:text="Numer:"
        android:paddingRight="30dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/txtNazwiP"
        app:layout_constraintStart_toStartOf="@+id/txtNazwiP"
        app:layout_constraintTop_toBottomOf="@+id/txtNazwiP" />

    <TextView
        android:id="@+id/txtMiastP"
        android:layout_width="350dp"
        android:layout_height="46dp"
        android:text="Miasto:"
        android:paddingRight="30dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/txtNumP"
        app:layout_constraintStart_toStartOf="@+id/txtNumP"
        app:layout_constraintTop_toBottomOf="@+id/txtNumP" />

    <TextView
        android:id="@+id/txtPlecP"
        android:layout_width="350dp"
        android:layout_height="46dp"
        android:text="Płeć:"
        android:paddingRight="30dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/txtNumP"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtNumP"
        app:layout_constraintTop_toBottomOf="@+id/txtMiastP" />

    <TextView
        android:id="@+id/txtImieP"
        android:layout_width="350dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        android:text="Imię:"
        android:paddingRight="30dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgProfPic" />

    <Button
        android:id="@+id/btnEditProfP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="124dp"
        android:text="Edytuj Profil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="MENU"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEditProfP" />
</androidx.constraintlayout.widget.ConstraintLayout>